{{ form_start(form) }}

<div class="form-group">
    {{ form_label(form.nom) }}
    {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
    {{ form_errors(form.nom,{'attr':{'class':'alert-danger'}}) }}
</div>
<div class="form-group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {'attr':{'class':'form-control'}}) }}
    {{ form_errors(form.description,{'attr':{'class':'alert-danger'}}) }}
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        {{ form_label(form.dateDebut) }}
        {{ form_widget(form.dateDebut) }}
        {{ form_errors(form.dateDebut,{'attr':{'class':'alert-danger'}}) }}
    </div>
    <div class="form-group col-md-6">
        {{ form_label(form.dateFin) }}
        {{ form_widget(form.dateFin) }}
        {{ form_errors(form.dateFin,{'attr':{'class':'alert-danger'}}) }}
    </div>
</div>

<div class="form-row">

    <div class="form-group col-md-6">
        {{ form_label(form.etapeId) }}
        {{ form_widget(form.etapeId,{'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.etapeId,{'attr':{'class':'alert-danger'}}) }}
    </div>

    <div class="form-group col-md-6">
        {{ form_label(form.typeTransport) }}
        {{ form_widget(form.typeTransport,{'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.typeTransport,{'attr':{'class':'alert-danger'}}) }}
    </div>
</div>

<div class="form-row">

    <div class="form-group col-md-6">

        {% if activite.photo %}
            <label>Photo</label><br>
            {% for img in activite.photo %}
                <span class=""><img src="{{ img }}" alt="photo {{ activite.nom }}"
                                    class="img-thumbnail" style="width: 150px;"></span>
            {% endfor %}
        {% endif %}
    </div>

    <div class="form-group col-md-6">
        {{ form_label(form.coordinates, 'Coordonnées') }}

        <ul id="email-fields-list"
            data-prototype="{{ form_widget(form.coordinates.vars.prototype)|e }}"
            data-widget-tags="{{ '<li></li>'|e }}"
            data-widget-counter="{{ form.coordinates|length }}">

            {% for coordinateField in form.coordinates %}
                <li>
                    {{ form_errors(coordinateField) }}
                    {{ form_widget(coordinateField) }}
                </li>
            {% endfor %}
        </ul>

        <button type="button"
                class="add-another-collection-widget btn btn-primary"
                data-list-selector="#email-fields-list">Ajouter des coordonnées</button>

    </div>


</div>

    <button class="btn btn-success">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}

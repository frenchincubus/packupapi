{% extends 'dashboard/index.html.twig' %}

{% block main %}

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ activite.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ activite.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ activite.description }}</td>
        </tr>
        <tr>
            <th>Etape</th>
            <td>
                {{ activite.etapeId.name }}
                <a href="{{ path('etape_show',{'id': activite.etapeId.Id }) }}"><span class="badge badge-warning">consulter</span></a>
            </td>
        </tr>
        <tr>
            <th>Voyage</th>
            <td>
                {{ activite.etapeId.voyageId.name }}
                <a href="{{ path('voyage_details',{'id': activite.etapeId.voyageId.Id }) }}"><span
                            class="badge badge-warning">consulter</span></a>
            </td>
        </tr>
        <tr>
            <th>Utilisateur</th>
            <td>
                {{ activite.etapeId.voyageId.userId.email }}
                <a href="{{ path('user_details', {'id': activite.etapeId.voyageId.userId.Id }) }}"><span
                            class="badge badge-warning">consulter</span></a>
            </td>
        </tr>
        <tr>
            <th>Coordonnées</th>
            <td>{{ activite.coordinates ? activite.coordinates|join(', ') : '' }}</td>
        </tr>
        <tr>
            <th>Départ</th>
            <td>{{ activite.dateDebut ? activite.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Fin</th>
            <td>{{ activite.dateFin ? activite.dateFin|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Transport</th>
            <td>{{ activite.typeTransport }}</td>
        </tr>
        <tr>
            <th>Date de modification</th>
            <td>{{ activite.updatedAt ? activite.updatedAt|date('Y-m-d H:i:s') : ' - ' }}</td>
        </tr>
        <tr>
            <th>Photos</th>
            <td>{% for photo in activite.photo %}
                    <img src="{{ photo }}" alt="{{ photo }}" class="img-thumbnail ml-2" style="width: 50px;">
                {% endfor %}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('activite_edit', {'id': activite.id}) }}">Editer</a>
    <br>
    <br>

    {{ include('activite/_delete_form.html.twig') }}
    <br>

    <a class="btn btn-primary" href="{{ path('activites') }}">Retourner à la liste des activités</a>
    <br>
    <br>
{% endblock %}

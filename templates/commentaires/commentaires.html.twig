{% extends 'dashboard/index.html.twig' %}

{% block stylesheetsMain %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.css"/>
{% endblock %}

{% block main %}

    <div>
        <table id="example" class="display" style="width:100%">
            <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">utilisateur</th>
                <th scope="col">Voyage</th>
                <th scope="col">publication</th>
                <th scope="col">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for commentaire in commentaires %}
                <tr>
                    <th scope="row">{{ commentaire.id }}</th>
                    <td>{{ commentaire.userId.username }}</td>
                    <td>{{ commentaire.voyageId.name }}</td>
                    <td>{{ commentaire.datePublication | date('d/m/y h:i:s') }}</td>
                    <td>
                        <a href="{{ path('commentaires_show', {'id': commentaire.Id}) }}"><span class="badge badge-warning">Consulter</span></a>
                        <a href="{{ path('commentaires_edit', {'id': commentaire.Id}) }}"><span class="badge badge-success">Editer</span></a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

    <div>
        <a class="btn btn-primary" href="{{ path('commentaires_new') }}">Ajouter un commentaire</a>
    </div>
    <br>

{% endblock %}

{% block javascriptsMain %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.20/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

{% endblock %}

{{ form_start(form) }}

<div class="form-group">
    {{ form_label(form.name) }}
    {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
    {{ form_errors(form.name,{'attr':{'class':'alert-danger'}}) }}
</div>
<div class="form-group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, {'attr':{'class':'form-control'}}) }}
    {{ form_errors(form.description,{'attr':{'class':'alert-danger'}}) }}
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        {{ form_label(form.pays) }}
        {{ form_widget(form.pays) }}
        {{ form_errors(form.pays,{'attr':{'class':'alert-danger'}}) }}
    </div>
    <div class="form-group col-md-6">
        {{ form_label(form.ville) }}
        {{ form_widget(form.ville) }}
        {{ form_errors(form.ville,{'attr':{'class':'alert-danger'}}) }}
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        {{ form_label(form.dateDebut) }}
        {{ form_widget(form.dateDebut) }}
        {{ form_errors(form.dateDebut,{'attr':{'class':'alert-danger'}}) }}
    </div>
    <div class="form-group col-md-6">
        {{ form_label(form.dateFin) }}
        {{ form_widget(form.dateFin) }}
        {{ form_errors(form.dateFin,{'attr':{'class':'alert-danger'}}) }}
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        {{ form_label(form.budget) }}
        {{ form_widget(form.budget,{'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.budget,{'attr':{'class':'alert-danger'}}) }}
    </div>

    <div class="form-group col-md-6">
        {{ form_label(form.voyageId) }}
        {{ form_widget(form.voyageId,{'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.voyageId,{'attr':{'class':'alert-danger'}}) }}
    </div>
</div>

<div class="form-row">

    <div class="form-group col-md-6">

        {% if etape.photo %}
            <label>Photo</label><br>
            <span class=""><img src="{{ etape.photo }}" alt="photo {{ etape.name }}"
                                class="img-thumbnail" style="width: 150px;"></span>
        {% endif %}
    </div>

    <div class="form-group col-md-6">
        {{ form_label(form.coordinates, 'Coordonnées') }}



        <ul id="email-fields-list"
            data-prototype="{{ form_widget(form.coordinates.vars.prototype)|e }}"
            data-widget-tags="{{ '<li></li>'|e }}"
            data-widget-counter="{{ form.coordinates|length }}">

            {% for coordinateField in form.coordinates %}
                <li>
                    {{ form_errors(coordinateField) }}
                    {{ form_widget(coordinateField) }}
                </li>
            {% endfor %}
        </ul>

        <button type="button"
                class="add-another-collection-widget btn btn-primary"
                data-list-selector="#email-fields-list">Ajouter des coordonnées</button>


    </div>

</div>


<button class="btn btn-success">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}


                    {% endif %}

                    {% if current_path == 'user_edit' %}
                        <h1 class="h2">Edition de l'utilisateur</h1>
                    {% endif %}

                    {% if current_path == 'user_new' %}
                        <h1 class="h2">Ajout d'un nouvel utilisateur</h1>
                    {% endif %}

                    {% if current_path == 'user_details' %}
                        <h1 class="h2">Profil de l'utilisateur</h1>
                    {% endif %}

                    {% if current_path == 'user_delete' %}
                        <h1 class="h2">Suppression de l'utilisateur</h1>
                    {% endif %}

                    {# VOYAGES #}
                    {% if current_path == 'voyages' %}
                        <h1 class="h2">Liste des voyages</h1>
                    {% endif %}

                    {% if current_path == 'voyage_edit' %}
                        <h1 class="h2">Edition du voyage</h1>
                    {% endif %}

                    {% if current_path == 'voyage_new' %}

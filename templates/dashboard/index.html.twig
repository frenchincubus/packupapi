                    {% endif %}

                    {% if current_path == 'voyage_details' %}
                        <h1 class="h2">Détails du voyage</h1>
                    {% endif %}

                    {% if current_path == 'voyage_delete' %}
                        <h1 class="h2">Suppression du voyage</h1>
                    {% endif %}


                    {# ETAPES #}
                    {% if current_path == 'etapes' %}
                        <h1 class="h2">Liste des étapes</h1>
                    {% endif %}

                    {% if current_path == 'etape_edit' %}
                        <h1 class="h2">Edition de l'étape</h1>
                    {% endif %}

                    {% if current_path == 'etape_new' %}
                        <h1 class="h2">Ajout d'une nouvelle étape</h1>
                    {% endif %}

                    {% if current_path == 'etape_show' %}
                        <h1 class="h2">Détails d'une étape</h1>
                    {% endif %}

                    {% if current_path == 'etape_delete' %}
                        <h1 class="h2">Suppression d'une étape</h1>
                    {% endif %}


                    {# ACTIVITES #}
                    {% if current_path == 'activites' %}
                        <h1 class="h2">Liste des activités</h1>
                    {% endif %}

                    {% if current_path == 'activite_edit' %}
                        <h1 class="h2">Edition de l'activité</h1>
                    {% endif %}

                    {% if current_path == 'activite_new' %}
                        <h1 class="h2">Ajout d'une nouvelle activité</h1>
                    {% endif %}

                    {% if current_path == 'activite_show' %}
                        <h1 class="h2">Détails d'une activité</h1>
                    {% endif %}

                    {% if current_path == 'activite_delete' %}
                        <h1 class="h2">Suppression d'une activité</h1>
                    {% endif %}


                    {# COMMENTAIRES #}
                    {% if current_path == 'commentaires' %}
                        <h1 class="h2">Liste des commentaires</h1>
                    {% endif %}

                    {% if current_path == 'commentaires_edit' %}
                        <h1 class="h2">Edition du commentaire</h1>
                    {% endif %}

                    {% if current_path == 'commentaires_new' %}
